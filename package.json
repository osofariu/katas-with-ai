{
  "name": "top-gear-refactoring-kata",
  "version": "1.0.0",
  "description": "This is a refactoring challenge where we look at a single-method case, which is untested, needs refactoring, and is hard to read. Oh, and contains bugs;-)",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "tslint -c tslint.json '*/src/**/*.{ts,tsx}'",
    "pretest": "npm run lint"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tslint": "^5.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wouterla/TopGearKata"
  }
}
